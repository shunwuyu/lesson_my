.goods-item {
  /* width: 200rpx; */
  text-align: center;
  color: #333;
  padding-bottom: 85rpx;
}

.image {
  width: 100%;
  border-radius: 10rpx;
}

.desc-info {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 5rpx;
}

.title {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
}

.info {
  font-size: 26rpx;
}

.info .price {
  color: #ff5777;
  /* padding-right: 10rpx; */
}

.info .icon {
  width: 30rpx;
  height: 30rpx;
  padding: 0 6rpx 0 10rpx;
  position: relative;
  top:4rpx;
}
